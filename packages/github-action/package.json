{
  "name": "@agenttrace/github-action",
  "version": "1.0.0",
  "description": "GitHub Action for evaluating AI agent quality on every PR",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && ncc build dist/main.js -o dist --source-map --license licenses.txt",
    "build:tsc": "tsc",
    "package": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "github-action",
    "agenttrace",
    "ai",
    "agent",
    "evaluation",
    "testing"
  ],
  "author": "AgentTrace",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^20.0.2",
    "agenttrace": "workspace:*",
    "js-yaml": "^4.1.0",
    "axios": "^1.6.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
